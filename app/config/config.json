{
  "organizations": {
    "saas_owner": {
      "name": "SaaS Service Owner",
      "domains": ["example.com"],
      "default_redirect": "/admin/dashboard",
      "roles": [
        {
          "name": "super_admin",
          "description": "Full access to all features and organizations",
          "permissions": [
            "*:*",
            "manage:organizations",
            "manage:users",
            "view:audit_logs"
          ]
        },
        {
          "name": "admin",
          "description": "Organization administrator with full access to their organization",
          "permissions": [
            "organization:manage",
            "users:manage",
            "settings:manage"
          ]
        }
      ]
    },
    "company1": {
      "name": "Company One",
      "domains": ["company1.com"],
      "default_redirect": "/dashboard",
      "roles": [
        {
          "name": "admin",
          "description": "Company administrator with full access to company resources",
          "permissions": [
            "company:manage",
            "users:manage",
            "reports:view",
            "settings:manage"
          ]
        },
        {
          "name": "user",
          "description": "Regular company user with basic access",
          "permissions": [
            "dashboard:view",
            "profile:manage",
            "documents:view"
          ]
        }
      ]
    },
    "company2": {
      "name": "Company Two",
      "domains": ["company2.com"],
      "default_redirect": "/dashboard",
      "roles": [
        {
          "name": "admin",
          "description": "Company administrator with full access to company resources",
          "permissions": [
            "company:manage",
            "users:manage",
            "reports:view",
            "settings:manage"
          ]
        },
        {
          "name": "user",
          "description": "Regular company user with basic access",
          "permissions": [
            "dashboard:view",
            "profile:manage",
            "documents:view"
          ]
        },
        {
          "name": "auditor",
          "description": "Read-only access for auditing purposes",
          "permissions": [
            "reports:view",
            "audit_logs:view"
          ]
        }
      ]
    }
  },
  "default_organization": "saas_owner"
}
